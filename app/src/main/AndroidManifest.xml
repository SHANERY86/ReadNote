<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ie.wit.readnote">

    <application
        android:name=".main.readNoteApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ReadNote">
        <activity
            android:name=".activities.Account"
            android:exported="true" />
        <activity
            android:name=".activities.Login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SignUp"
            android:exported="true" />
        <activity
            android:name=".activities.BookList"
            android:exported="true" />
        <activity
            android:name=".activities.Book"
            android:exported="true" />
        <activity
            android:name=".activities.noteList"
            android:exported="true" />
        <activity
            android:name=".activities.Note"
            android:exported="true" />
    </application>

</manifest>